<% include('layout', { body: null }) %>
<h2>Editar Producto</h2>
<form action="/edit/<%= producto.id %>" method="POST">
  <label>Nombre: <input type="text" name="nombre" value="<%= producto.nombre %>" required></label>
  <label>Precio: <input type="number" name="precio" value="<%= producto.precio %>" step="0.01" required></label>
  <label>Stock: <input type="number" name="stock" value="<%= producto.stock %>" required></label>
  <button type="submit">Actualizar</button>
</form>
